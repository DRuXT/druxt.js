{
  "extends": [
    "@nuxtjs"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "groupName": "examples",
      "matchPaths": ["examples/**"]
    },
    {
      "groupName": "eslint",
      "matchPackagePatterns": ["eslint"]
    },
    {
      "groupName": "jest",
      "matchPackagePatterns": ["jest"]
    }
  ],
  "ignoreDeps": [
    "@nuxtjs/storybook",
    "@commitlint/cli",
    "@commitlint/config-conventional",
    "@tailwindcss/typography",
    "renovate"
  ]
}
